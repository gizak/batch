{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "pretty": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "./build",
        "target": "es2015",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "lib_deprecated",
        "test"
    ]
}