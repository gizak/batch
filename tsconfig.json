{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "pretty": false,
        "sourceMap": false,
        "preserveConstEnums": true,
        "outDir": "build",
        "rootDir": "lib",
        "target": "es6",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noEmitOnError": true
    },
    "include": [
        "lib/*.ts",
        "lib/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "coverage",
        "bin",
        "batchdb"
    ]
}