{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": [
                "install"
            ]
        },
        {
            "taskName": "update",
            "args": [
                "update"
            ]
        },
        {
            "taskName": "test",
            "args": [
                "run",
                "test",
                "-s"
            ]
        },
        {
            "taskName": "build",
            "isBuildCommand": true,
            "problemMatcher": "$tsc",
            "showOutput": "silent",
            "args": [
                "run",
                "build",
                "-s"
            ]
        }
    ]
}